{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
            
            <div class="panel-body">
                <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" />
                        </div>
                    </div>
                    <div class="form-group">
                       
                        <div class="col-sm-12">
                            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success" id="_submit" name="_submit" >
                                {{ 'security.login.submit'|trans }}
                            </button>
                            <button type="reset" class="btn btn-default">
                                Reset</button>
                        </div>
                    </div>
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </form>
            </div>
            <div class="panel-footer text-center">
                Not Registred? <a href="{{ path('fos_user_registration_register') }}">Register here</a>

            </div>
        </div>
    </div>
</div>




